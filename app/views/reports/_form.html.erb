<%= form_with(model: report) do |form| %>
  <% if report.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(report.errors.count, "error") %> prohibited this report from being saved:</h4>

      <ul>
        <% report.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class:"form-control", placeholder:"Name"  %>

  </div>
  </br>
  <div class="field form-group">
    <%= form.label :gender %>
    <%= form.select :gender, collection: Report.genders.keys.to_a, class: "form-control" %>
    <% form.text_field :vtype, class:"form-control" , placeholder:"Violence Type"  %>
  </div>
  </br>
  
  <div class="field form-group">
    <%= form.label :email %>
    <%= form.email_field :email, class:"form-control", placeholder:"Email"  %>
  </div>
  </br>
  <div class="field form-group">
    <%= form.label :phone %>
    <%= form.text_field :phone, class:"form-control" , placeholder:"Phone" %>
  </div>
  </br>
  <div class="field form-group">
    <%= form.label :address %>
    <%= form.text_field :address, class:"form-control" , placeholder:"Address" %>
  </div>
  </br>
  <div class="field form-group">
    <%= form.label :vtype %>
    <%= form.select :vtype, collection: Report.vtypes.keys.to_a, class: "form-control" %>
    <% form.text_field :vtype, class:"form-control" , placeholder:"Violence Type"  %>
  </div>
  </br>
  <div class="field form-group">
    <%= form.label "Describe your report if you can (<1000 characters): " %>
    <%= form.text_area :description, class: "form-control" %>
   
  </div>
  </br>
  <i>Attach image or video evidences if available. </i>
  </br>
  <div class="field form-group">
    <%= form.label :images %>
    <%= form.file_field :images, multiple:true, class:"form-control" , placeholder:"Attach image evidence"  %>
  </div>
  </br>
  <div class="field form-group">
    <%= form.label :videos %>
    <%= form.file_field :videos, multiple:true, class:"form-control" , placeholder:"Attach video evidence"  %>
  </div>
  </br>
  <div class="field form-group">
    <%= form.label "You are reporting as a: " %>
    <%= form.select :reporter, collection: Report.reporters.keys.to_a, class: "form-control" %>
   
  </div>
  </br>
  <div class="actions">
    <%= form.submit "Submit Report", class:"btn btn-secondary" %>
  </div>
  </br>
<% end %>
